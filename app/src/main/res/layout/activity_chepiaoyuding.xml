<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent" >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="车票预订"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:gravity="center"
    android:background="#ce0099FF"/>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="center"
    android:src="@drawable/yueche"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="2dp"
    android:background="#F1F1F3"/>


<ScrollView
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/didian1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="上海"
                android:gravity="center"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/transfer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/huhuan"/>
            <TextView
                android:id="@+id/didian2"
                android:gravity="center"
                android:text="杭州"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#F1F1F3"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="出发日期"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/textcfrq"
                android:textColor="#ce000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="请选择时间"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:gravity="center_vertical" />
            <CheckBox
                android:id="@+id/box_student"
                android:text="学生"
                android:textSize="20sp"
                android:textColor="#ce000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:text="出发时间"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/textcfsj"
                android:textColor="#ce000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.88"
                android:text="00:00--24:00"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:gravity="center_vertical" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:text="席       别"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/textxb"
                android:textColor="#ce000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.88"
                android:text="不限"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#F1F1F3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">
            <TextView
                android:id="@+id/chosen0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="全部"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ce000000"/>
            <TextView
                android:id="@+id/chosen1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="G/D/C"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ce000000"/>
            <TextView
                android:id="@+id/chosen2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Z字头"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ce000000"/>
            <TextView
                android:id="@+id/chosen3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="T字头"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ce000000"/>
            <TextView
                android:id="@+id/chosen4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="K字头"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ce000000"/>
            <TextView
                android:id="@+id/chosen5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="其他"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#ce000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="⊕乘客"
                android:textColor="#ceF4A105"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_Query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0099FF" />
        </LinearLayout>




        <LinearLayout
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#0099FF"
                android:layout_gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="最近查询路线"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="1"/>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#0099FF"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/newdidian1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11111"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/newdidian2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22222"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/newdidian3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="33333"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/newdidian4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="44444"
                android:textSize="15sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/newdidian5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="55555"
                android:textSize="15sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_yuding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="车票预定"
            android:textColor="#FFFFFF"
            android:background="#64000000"/>
        <Button
            android:id="@+id/btn_ddchaxun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单查询"
            android:textColor="#FFFFFF"
            android:background="#96000000"/>
        <Button
            android:id="@+id/btn_my12306"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的12306"
            android:textColor="#FFFFFF"
            android:background="#96000000"/>
    </LinearLayout>
</LinearLayout>
