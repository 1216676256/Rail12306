<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:text="＜"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="#ce0099ff"
            />
        <TextView
            android:id="@+id/txtpath"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="20"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:text=""
            android:background="#ce0099ff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/yersterday"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="#ce002aff"
                android:text="前一天"
                android:gravity="center"/>
            <TextView
                android:id="@+id/cfrqchaxun"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="#ce00c4ff"
                android:text=""
                android:gravity="center"/>
            <TextView
                android:id="@+id/tomorrow"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="#ce002aff"
                android:text="后一天"
                android:gravity="center"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_fashi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发时︿"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#c8000000"/>
        <Button
            android:id="@+id/btn_lishi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="历时︿"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#c8000000"/>
        <Button
            android:id="@+id/btn_daoshi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="到时︿"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#c8000000"/>
        <Button
            android:id="@+id/btn_piaojia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="票价︿"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#c8000000"/>
    </LinearLayout>
</LinearLayout>
